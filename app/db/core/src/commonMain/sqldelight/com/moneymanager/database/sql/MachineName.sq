-- MachineName: Lookup table for machine names/hostnames
CREATE TABLE MachineName (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL UNIQUE
);

selectAll:
SELECT * FROM MachineName ORDER BY name;

selectById:
SELECT * FROM MachineName WHERE id = ?;

selectByName:
SELECT id FROM MachineName WHERE name = ?;

insertOrIgnore:
INSERT OR IGNORE INTO MachineName (name) VALUES (?);

lastInsertRowId:
SELECT last_insert_rowid();
